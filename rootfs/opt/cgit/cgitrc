# cigit documentation: https://git.zx2c4.com/cgit/tree/cgitrc.5.txt
# General
root-title=Git Repository Browser
virtual-root=/
robots=noindex, nofollow
clone-url=http://$HTTP_HOST$CGIT_ROOTED_PATH/$CGIT_REPO_URL ssh://git@$HTTP_HOST:2222/$CGIT_REPO_URL
enable-commit-graph=1
enable-filter-overrides=1
enable-index-links=1
enable-log-filecount=1
enable-log-linecount=1
enable-subject-links=1
max-stats=year
noplainemail=1
enable-blame=1
enable-follow-links=1
enable-html-serving=1
enable-remote-branches=1
enable-index-owner=0
branch-sort=age
# Use pygments for syntax highlighting
source-filter=/opt/cgit/filters/syntax-highlighting.py
about-filter=/opt/cgit/filters/about-formatting.sh
commit-filter=/opt/cgit/filters/commit-links.sh
email-filter=/opt/cgit/filters/email-gravatar.py

# Cache
cache-size=40
cache-root=/opt/cgit/cache
cache-dynamic-ttl=10
cache-repo-ttl=10
cache-root-ttl=10
cache-scanrc-ttl=10
cache-static-ttl=10

# Repos
remove-suffix=1
enable-git-config=1
# requires python-markdown
readme=:README.md
# requires rst2html
readme=:README.rst
readme=:README.txt
readme=:README.html
# Gitolite stores repositories in /var/lib/git/repositories
# The symlink /opt/git points to this location
# Use Gitolite's projects.list instead of scan-path for better performance
# and to respect Gitolite's access control
project-list=/var/lib/git/projects.list
# Fallback to scan-path if projects.list doesn't exist yet
scan-path=/var/lib/git/repositories/
# Hide gitolite-admin from the public view
repo.ignore=gitolite-admin
# List of repositories can be included
#include=/opt/cgit/cgitrepos
